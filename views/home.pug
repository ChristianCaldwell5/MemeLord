doctype html
html(lang = 'en')
    head
        title Meme Lord
        meta(name  = "viewport" content = "width=device-width, initial-scale=1")
        link(rel = "stylesheet" type = "text/css" href = "/styles/nav.css")
        link(rel = "stylesheet" type = "text/css" href = "/styles/main.css")
